---
import "../styles/main.css";
import MainLayout from "src/layouts/MainLayout.astro";
import ContactForm from '../components/ContactForm.jsx';
import { AvatarPhoto } from '../components/AvatarPhoto.jsx';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Theyobii</title>
    </head>


	<body>
        <main class="min-h-screen flex flex-col items-center p-4 sm:p-8 bg-white-50">
        
            <header>
                <nav class="w-full max-w-4xl mb-8 flex justify-between items-center py-4">
                <div class="space-x-4">
                    <a href="/" class="absolute top-6 right-14 rounded-md p-[0.2rem] duration-100 text-gray-700 font-semibold mb-4 hover:text-indigo-600">Inicio</a>
                    <a href="/contact" class="absolute top-6 right-28 text-gray-700 rounded-md p-[0.2rem] duration-100 font-semibold mb-4 hover:text-indigo-600">Contacto</a>
                </div>
            </header>
        
            <section id="perfil" class="">
            
            <div class="flex flex-col md:flex-row items-center md:space-x-8">
                
                <div class="mb-6 md:mb-0 flex-shrink-0">
                 <AvatarPhoto 
                className="w-60 h-60 rounded-full object-cover border-2 hadow-lg mb-6" 
                client:load/>
                </div>
                
                <div class="text-center md:text-left">
                    <h1 class="text-4xl sm:text-4xl font-extrabold text-gray-900 mb-2">
                        Hola, soy Jonn
                    </h1>
                    <p class="text-xl text-indigo-600 font-semibold mb-4">
                        Desarrollador Web 
                    </p>
                    <p class="text-gray-700 leading-relaxed max-w-prose">
                        Soy un apasionado desarrollador, cada dia aprendiendo mas sobre desarrollo frontend y backend. Mi enfoque es construir experiencias web rápidas y modernas.
                    </p>
                </div>

            </div>

        </section>
    
    </main>
    
    <footer class="w-full mt-12 py-4 bg-gray-800 text-center text-gray-400"
        >© {new Date().getFullYear()} - Jonn
</footer>
    
    </body>

</html>
