{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": [
    "dist"
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "resolveJsonModule": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"strict": true,
		"baseUrl": ".",
		"paths": {
			"@styles/*": [
				"src/styles/*"
			],
			"@assets/*": [
				"src/assets/*"
			],
			"@components/*": [
				"src/components/*"
			]
		}
  }
}
